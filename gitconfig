[user]
	name = Alan Braithwaite
	email = alan@segment.com

[alias]
	in = log ..@{u}
	out = log @{u}..
	a = add
	c = commit
	b = branch
	d = diff
	dc = diff --cached
	f = fetch
	l = log
	ls = log --pretty=format:'%C(magenta)%h%Creset %C(yellow)%aN%Creset %C(green)%aE%Creset %C(dim)%ai%Creset\n %s %C(cyan)%d%Creset'
	m = merge
	s = status -sb
	st = status
	co = "!f() { echo \"$@\" | sed -E 's#-b\\s?(\\w+)#-b alan/\\1#' | xargs git checkout ; }; f"
	; co = checkout
	cl = clone -o upstream

[merge]
	ff = only

[core]
	editor = vim

[transfer]
	fsckObjects = true

[color]
	branch = auto
	diff = auto
	status = auto
	ui = true

